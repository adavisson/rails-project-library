<h1>Please Login</h1>

<%= form_tag('/signin') do %>
  <div class="form-group">
  <label>Email: </label>
  <%= text_field_tag :email, nil, class: "form-control" %><br>
  </div>

  <div class="form-group">
  <label>Password: </label>
  <%= password_field_tag :password, nil, class: "form-control" %><br>
  </div>

  <div class="actions">
  <%= submit_tag "Sign In", class: "btn btn-primary" %>
  </div>
<% end%>