<% if @user %>
  <h1><%= @user.name %>'s Books</h1>
<% else %>
  <h1>List of Books</h1>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Available for Check Out?</th>
      <th>View Book Page</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.author.name %>
        </td>
        <td>
          <%= book.genre.name %>
        </td>
        <td>
          <%= book.checked_out ? 'no' : 'yes' %>
        </td>
        <td>
          <%= link_to "View", book_path(book) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @user && @books == [] %>
  <p align=center>You currently have no books checked out to you.</p>
<% end %>